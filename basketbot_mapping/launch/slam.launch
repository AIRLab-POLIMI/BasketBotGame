  <param name="map_frame" value="map" />
  <param name="map_update_interval" value="2" />  
  <param name="temporalUpdate" value="0.5" />
  <param name="srr" value="1.0" /> <!-- questo solo per debug -->
  <param name="srt" value="1.0" /> <!-- questo solo per debug -->
  <param name="str" value="1.0" /> <!-- questo solo per debug -->
  <param name="stt" value="1.0" /> <!-- questo solo per debug -->
  <param name="throttle_scans" value="5" />
  <param name="iterations" value="10" />
</node>





